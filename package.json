{
  "name": "jovani-botquez",
  "version": "2.0.0",
  "description": "Botani | Discord Bot for entertainment, music powered by Youtube",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "format": "prettier --write ."
  },
  "license": "MIT",
  "dependencies": {
    "@discord-player/extractor": "4.4.1",
    "@discordjs/opus": "0.9.0",
    "discord-player": "6.6.2",
    "discord.js": "14.12.1",
    "dotenv": "16.3.1",
    "ffmpeg": "0.0.4",
    "fluent-ffmpeg": "2.1.2",
    "opusscript": "0.0.8",
    "prism-media": "1.3.5",
    "yt-search": "2.10.4",
    "ytdl-core": "4.11.5",
    "ytsr": "3.8.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "eslint": "8.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.10",
    "prettier": "3.0.2",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "indent": [
        "warn",
        2
      ],
      "no-mixed-spaces-and-tabs": "error",
      "no-unused-vars": "warn",
      "no-shadow": "error",
      "no-use-before-define": "error",
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "quotes": [
        "warn",
        "double"
      ],
      "curly": "error",
      "no-else-return": "error",
      "prefer-const": "error",
      "no-console": "warn",
      "no-alert": "warn",
      "no-debugger": "warn",
      "semi": [
        "warn",
        "always"
      ],
      "comma-spacing": "error",
      "brace-style": [
        "error",
        "1tbs"
      ],
      "import/no-duplicates": "error",
      "@typescript-eslint/explicit-module-boundary-types": "error",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescripts-eslint/no-explicit-any": "warn"
    },
    "settings": {}
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 140
  }
}
